<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>

<ScrollPane fx:controller="cs151.application.MainController"
            prefWidth="600" prefHeight="400" xmlns:fx="http://javafx.com/fxml">
    <content>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="12" alignment="CENTER"
      prefWidth="600" prefHeight="800">

    <Label text="KnowledgeTrack: Student Profile Page" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="Enter Full Name:"/>
    <TextField fx:id="nameField" promptText="Enter student name" maxWidth="260"/>

    <Label text="Select Academic Status:"/>
    <ComboBox fx:id="dropdown" prefWidth="150">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Freshman" />
                <String fx:value="Sophmore" />
                <String fx:value="Junior" />
                <String fx:value="Senior" />
                <String fx:value="Graduate" />
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Select Job Status:"/>
    <RadioButton text="Employed"/>
    <RadioButton text="Unemployed" />

    <Label text="Job Details:"/>
    <TextField fx:id="textField" promptText="Enter your input here" visible="false" />

    <Label text="Known Programming Languages:"/>


    <Label text="Databases Known:"/>


    <Label text="Preferred Professional Role:"/>
    <ComboBox fx:id="dropDown" prefWidth="150">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Front-end" />
                <String fx:value="Back-end" />
                <String fx:value="Full-stack" />
                <String fx:value="Data" />
                <String fx:value="Other" />
                <TextField fx:id="otherField" maxWidth="260"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Comments:"/>
    <TextField fx:id="commentField" promptText="Add faculty comments" maxWidth="260" maxHeight="500"/>

    <CheckBox text="Whitelist Student" fx:id="whiteList"/>
    <CheckBox text="Blacklist Student" fx:id="blackList"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#save"/>
        <Button text="Edit" />
        <Button text="View Saved Profiles" onAction="#savedProfile"/>
        <Button text="Back to Home" onAction="#goBackToHome"/>
    </HBox>

</VBox>

    </content>
</ScrollPane>